/**index.wxss**/
page {
  height: 100vh;
  display: flex;
  flex-direction: column;
}

.container {
  flex: 1;
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 32rpx;
}

.nav-button {
  width: 100%;
  height: 88rpx;
  background-color: #2B2B2B;
  color: #FFFFFF;
  border-radius: 12rpx;
  font-size: 32rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.scrollarea {
  flex: 1;
  overflow-y: hidden;
}
